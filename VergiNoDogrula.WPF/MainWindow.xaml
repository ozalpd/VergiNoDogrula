<Window x:Class="VergiNoDogrula.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VergiNoDogrula.WPF"
        mc:Ignorable="d"
        Title="VergiNo ve TCKN Doğrula"
        Height="600" MinHeight="400" Width="800" MinWidth="600">
    <Grid Margin="8,8,8,8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="32" />
            <ColumnDefinition Width="32" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="18" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Orientation="Horizontal">
            <Button Style="{StaticResource IconButtonStyle-28x24}"
                ToolTip="Yeni bir mükellef eklemek için tıklayın"
                Command="{Binding AddTaxPayerCommand}"
                CommandParameter="{Binding}"
                AutomationProperties.Name="Ekle">
                <Viewbox Width="14" Height="14">
                    <Path Fill="Black" Data="{StaticResource plus-circle}"/>
                </Viewbox>
            </Button>

            <Button Style="{StaticResource IconButtonStyle-28x24}"
                ToolTip="Seçili mükellefi kaydetmek için tıklayın"
                Command="{Binding SaveTaxPayerCommand}"
                CommandParameter="{Binding}"
                AutomationProperties.Name="Kaydet">
                <Viewbox Width="14" Height="14">
                    <Path Fill="#00008F" Data="{StaticResource floppy}"/>
                </Viewbox>
            </Button>

            <Button Style="{StaticResource IconButtonStyle-28x24}"
                ToolTip="Seçili mükellefi silmek için tıklayın"
                Command="{Binding DeleteTaxPayerCommand}"
                CommandParameter="{Binding}"
                AutomationProperties.Name="Sil">
                <Viewbox Width="14" Height="14">
                    <Path Fill="Black" Data="{StaticResource trash3}"/>
                </Viewbox>
            </Button>
        </StackPanel>

        <Label Grid.Column="0" Grid.Row="1" Content="Vergi Numarası:" VerticalAlignment="Top" Margin="0,4,0,0" />
        <TextBox Grid.Column="1" Grid.Row="1" Margin="4,4,8,0" VerticalAlignment="Top"
                 Style="{StaticResource DisabledWhenNullTextBoxStyle}"
                 Text="{Binding SelectedItem.TaxNumber, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}" />

        <Label Grid.Column="0" Grid.Row="3" Content="Ünvan:" VerticalAlignment="Top" Margin="0,4,0,0" />
        <TextBox Grid.Column="1" Grid.Row="3"  Margin="4,4,8,0" VerticalAlignment="Top"
                 Style="{StaticResource DisabledWhenNullTextBoxStyle}"
                 Text="{Binding SelectedItem.Title, UpdateSourceTrigger=LostFocus, ValidatesOnNotifyDataErrors=True}">
        </TextBox>

        <DataGrid Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="8" Margin="0,0,8,0"
                  ItemsSource="{Binding TaxPayers}" 
                  SelectedItem="{Binding SelectedItem}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vergi Numarası" Binding="{Binding TaxNumber}" Width="150" />
                <DataGridTextColumn Header="Ünvan" Binding="{Binding Title}" Width="*" />
            </DataGrid.Columns>
            <DataGrid.Style>
                <Style TargetType="DataGrid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding TaxPayers.Count}" Value="0">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGrid">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Background="{TemplateBinding Background}">
                                            <TextBlock Text="Henüz kayıt yok" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       FontSize="14"
                                                       Foreground="Gray" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Style>
        </DataGrid>
    </Grid>
</Window>
